{
	"name": "create-next",
	"author": {
		"name": "Duduar Deagle",
		"url": "https://duduar.dev",
		"email": "support@duduar.dev"
	},
	"type": "module",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/duduardeagle/next-template.git"
	},
	"private": true,
	"dependencies": {
		"@commitlint/cli": "19.3.0",
		"@duduardeagle/stylelint-config": "1.1.0",
		"@next/eslint-plugin-next": "14.2.5",
		"@types/bun": "1.1.6",
		"@types/node": "20.14.10",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"@typescript-eslint/eslint-plugin": "7.16.1",
		"@typescript-eslint/parser": "7.16.1",
		"autoprefixer": "10.4.19",
		"clsx": "2.1.1",
		"cssnano": "7.0.4",
		"cssnano-preset-advanced": "7.0.4",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"gitmoji-cli": "9.4.0",
		"husky": "9.1.3",
		"lint-staged": "15.2.7",
		"next": "14.2.5",
		"postcss": "8.4.39",
		"postcss-import": "16.1.0",
		"postcss-nesting": "12.1.5",
		"prettier": "3.3.3",
		"prettier-plugin-tailwindcss": "0.6.5",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"sharp": "0.33.4",
		"stylelint": "16.7.0",
		"tailwindcss": "3.4.7"
	},
	"postcss": {
		"plugins": {
			"postcss-import": {},
			"tailwindcss/nesting": "postcss-nesting",
			"tailwindcss": {},
			"autoprefixer": {},
			"cssnano": {
				"preset": "advanced"
			}
		}
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true,
			"es2021": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@next/next/recommended",
			"eslint-config-prettier"
		],
		"plugins": [
			"@typescript-eslint"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"ignorePatterns": [
			"core/design-system"
		],
		"rules": {
			"sort-imports": [
				"error",
				{
					"allowSeparatedGroups": true,
					"ignoreCase": false,
					"ignoreDeclarationSort": false,
					"ignoreMemberSort": false,
					"memberSyntaxSortOrder": [
						"all",
						"single",
						"multiple",
						"none"
					]
				}
			]
		}
	},
	"prettier": {
		"printWidth": 80,
		"useTabs": true,
		"singleQuote": false,
		"quoteProps": "as-needed",
		"jsxSingleQuote": false,
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"bracketSameLine": true,
		"semi": false,
		"trailingComma": "none",
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	},
	"stylelint": {
		"extends": "@duduardeagle/stylelint-config"
	},
	"lint-staged": {
		"*.json": "prettier --check",
		"*.js": [
			"prettier --check --plugin=prettier-plugin-tailwindcss",
			"eslint --quiet"
		],
		"*.cjs": [
			"prettier --check --plugin=prettier-plugin-tailwindcss",
			"eslint --quiet"
		],
		"*.mjs": [
			"prettier --check --plugin=prettier-plugin-tailwindcss",
			"eslint --quiet"
		],
		"*.jsx": [
			"prettier --check --plugin=prettier-plugin-tailwindcss",
			"eslint --quiet"
		],
		"*.ts": [
			"prettier --check --plugin=prettier-plugin-tailwindcss",
			"eslint --quiet"
		],
		"*.tsx": [
			"prettier --check --plugin=prettier-plugin-tailwindcss",
			"eslint --quiet"
		],
		"*.css": [
			"prettier --check --plugin=prettier-plugin-tailwindcss",
			"stylelint"
		]
	},
	"gitmoji": {
		"autoAdd": false,
		"emojiFormat": "emoji",
		"scopePrompt": false,
		"messagePrompt": false,
		"capitalizeTitle": true,
		"gitmojisUrl": "https://gitmoji.dev/api/gitmojis"
	},
	"commitlint": {
		"rules": {
			"header-max-length": [
				2,
				"always",
				50
			],
			"header-full-stop": [
				2,
				"never",
				"."
			],
			"body-leading-blank": [
				2,
				"always",
				""
			],
			"body-full-stop": [
				1,
				"always",
				"."
			],
			"body-case": [
				2,
				"always",
				"sentence-case"
			]
		}
	},
	"scripts": {
		"prepare": "husky",
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "eslint . --ext .js,.cjs,.mjs,.jsx,.ts,.tsx",
		"prettier": "prettier . --check --plugin=prettier-plugin-tailwindcss",
		"prettier:fix": "prettier . --write --plugin=prettier-plugin-tailwindcss",
		"stylelint": "stylelint '**/*.css'",
		"stylelint:fix": "stylelint --fix '**/*.css'"
	}
}
